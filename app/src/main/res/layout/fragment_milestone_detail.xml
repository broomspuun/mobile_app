<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.android.lab.viewmodel.ProjectViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.MilestoneDetailFragment">

        <EditText
            android:id="@+id/milestoneName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Milestone Name" />

        <EditText
            android:id="@+id/milestoneDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Milestone Deadline" />

        <EditText
            android:id="@+id/milestoneDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Milestone Description" />

        <Button
            android:id="@+id/saveMilestoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Milestone" />
    </LinearLayout>
</layout>
